/**app.wxss**/

page {
  background-color:#F1F1F1;
}

.bgw {
  background-color: #fff;
}

.mgt {
    margin-top: 20rpx;
}

/* 细线边框 */

.bd-r {
  position: relative;
}

.bd-r::after {
  content: "";
  width: 1rpx;
  height: 100%;
  background-color: #ccc;
  position: absolute;
  right: 0;
  top: 0;
}

.bd-r:nth-child(3n)::after {
  width: 0;
}

/* 箭头 */
.arrow {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.arrow::after {
    content: "";
    width: 20rpx;
    height: 20rpx;
    border-top: 3rpx solid #ccc;
    border-right: 3rpx solid #ccc;
    transform: rotate(45deg);
}

/* 分割线 */

.divider {
    width: 100%;
    height: 20rpx;
    background-color: #f1f1f1;
    box-shadow: 0px 4px 3px -3px rgba(168, 167, 167, 0.75) inset;
}

/* 栏目 */

.cell {
    background-color: #fff;
    font-size: 14px;
}

.cell-item {
    padding: 25rpx;
    border-bottom: 1px solid #e7e7e7;
}