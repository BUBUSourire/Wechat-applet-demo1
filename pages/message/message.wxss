page {
    background-color: #bbb;
}

.card {
    background-color: #fff;
    margin: 15rpx;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    padding: 15rpx;
}

.card image {
    width: 100%;
    height: 390rpx;
}

.card-title {
    font-size: 20px;
}

.card-time {
    margin: 10px 0;
    border-bottom: 1rpx solid #ddd;
    color: #b1b1b1;
    font-size: 14px;
    padding-bottom: 10rpx;
}

.card-introduce {
    margin: 10px 0;
    border-bottom: 1px solid #ddd;
    padding-bottom: 10rpx;
}

.card-detail {
    font-size: 14px;
    color: #bbb;
}