/* pages/shopList/shopList.wxss */

.shop {
    width: 100%;
    padding: 30rpx 20rpx;
    border-bottom: 1rpx solid #bdbdbd;
    display: flex;
}

image {
    max-width: 210rpx;
    max-height: 210rpx;
    overflow: hidden;
    vertical-align: middle;
}

.shopDetail {
    width: 100%;
    padding: 0 20rpx;
    display: flex;
    flex-direction: column;
    font-size: 12px;
    color: rgb(104, 103, 103);
    margin-left: 20rpx;
}

.shopDetail text {
    padding: 10rpx;
    width: 90%;
}

.shopName {
    color: #000;
    font-size: 16px;
}

.star {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.starBefore {
    color: #ccc;
}

.starAfter {
    position: absolute;
    top: 0;
    right: 20rpx;
    color: #ff6f00;
    width: 85%;
    overflow: hidden;
}
