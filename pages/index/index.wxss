.banner,
.banner image,
.banner swiper
 {
  width: 100%;
  height: 390rpx;
}

.top-nav {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  font-size: 14px;
}

.top-nav .top-nav-inner {
  width: 33%;
  height: 200rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.top-nav .top-nav-inner image {
  width: 80rpx;
  height: 80rpx;
}

.inside {
  display: flex;
  justify-content: center;
  padding: 20rpx;
}

.inside image {
  width: 320rpx;
  height: 180rpx;
  margin: 0 10rpx;
}
